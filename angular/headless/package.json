{
	"name": "@agnos-ui/angular-headless",
	"description": "Headless component library for Angular.",
	"version": "0.9.1",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"esm2022": "./dist/esm2022/agnos-ui-angular-headless.mjs",
			"esm": "./dist/esm2022/agnos-ui-angular-headless.mjs",
			"default": "./dist/fesm2022/agnos-ui-angular-headless.mjs"
		}
	},
	"scripts": {
		"ng": "ng",
		"build": "wireit",
		"test": "vitest run",
		"tdd": "vitest",
		"tdd:ui": "vitest --ui",
		"test:coverage": "wireit"
	},
	"wireit": {
		"generate:exports": {
			"command": "node ../../scripts/generateExports.js angular/headless core @agnos-ui/core true",
			"files": [
				"src/**",
				"../../core/src/**",
				"!src/generated/**",
				"../../scripts/generateExports.js"
			],
			"output": [
				"src/generated/**"
			]
		},
		"build:src": {
			"command": "ng build",
			"dependencies": [
				"generate:exports",
				"../../core:build"
			],
			"files": [
				"src/**",
				"!src/generated/**",
				"tsconfig.build.json",
				"../tsconfig.json",
				"../../tsconfig.json",
				"angular.json",
				"ng-package.json"
			],
			"output": [
				"dist/**",
				"!dist/README.md",
				"!dist/package.json"
			]
		},
		"build:pkg": {
			"command": "node ../../scripts/buildPackageJson.js . dist",
			"dependencies": [
				"build:src"
			],
			"files": [
				"../../scripts/buildPackageJson.js",
				"../../package.json",
				"package.json",
				"README.md"
			],
			"output": [
				"dist/README.md",
				"dist/package.json"
			]
		},
		"build": {
			"dependencies": [
				"build:pkg"
			]
		},
		"test:coverage": {
			"command": "node --import @agnos-ui/code-coverage/interceptReadFile ../../node_modules/vitest/vitest.mjs run --coverage",
			"dependencies": [
				"../../code-coverage:build"
			],
			"files": [
				"src/**",
				"!src/generated/**",
				"tsconfig.spec.json",
				"vitest.config.ts"
			],
			"output": [
				"coverage"
			]
		},
		"generate:typedoc": {
			"command": "typedoc",
			"dependencies": [
				"generate:exports"
			],
			"files": [
				"src/**",
				"!src/generated/**",
				"tsconfig.json",
				"../tsconfig.json",
				"../../tsconfig.json",
				"typedoc.json",
				"../../typedoc.base.json"
			],
			"output": [
				"generated/md/**",
				"generated/angular-headless.json"
			]
		}
	},
	"peerDependencies": {
		"@amadeus-it-group/tansu": "^2.0.0",
		"@angular/common": "^20.0.0",
		"@angular/core": "^20.0.0"
	},
	"dependencies": {
		"@agnos-ui/core": "0.9.1",
		"tslib": "^2.8.1"
	},
	"devDependencies": {
		"@analogjs/vite-plugin-angular": "^1.10.1",
		"@analogjs/vitest-angular": "^1.10.1",
		"@angular/animations": "^20.0.0",
		"@angular/build": "^20.0.0",
		"@angular/cli": "^20.0.0",
		"@angular/common": "^20.0.0",
		"@angular/compiler": "^20.0.0",
		"@angular/core": "^20.0.0",
		"@angular/forms": "^20.0.0",
		"@angular/platform-browser": "^20.0.0",
		"@angular/platform-browser-dynamic": "^20.0.0",
		"ng-packagr": "^20.0.0",
		"rxjs": "^7.8.1",
		"zone.js": "~0.15.0"
	},
	"sideEffects": false
}
