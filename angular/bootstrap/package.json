{
	"name": "@agnos-ui/angular-bootstrap",
	"description": "Bootstrap-based component library for Angular.",
	"version": "0.0.0",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"esm2022": "./dist/esm2022/agnos-ui-angular-bootstrap.mjs",
			"esm": "./dist/esm2022/agnos-ui-angular-bootstrap.mjs",
			"default": "./dist/fesm2022/agnos-ui-angular-bootstrap.mjs"
		}
	},
	"scripts": {
		"ng": "ng",
		"build": "wireit",
		"check": "wireit"
	},
	"wireit": {
		"generate:component-types": {
			"command": "tsx --tsconfig ../../scripts/bootstrapTypes/tsconfig.json ../../scripts/bootstrapTypes/genTypeExports.ts angular",
			"files": [
				"../../core/src/**",
				"../../core-bootstrap/src/**",
				"../../scripts/bootstrapTypes/genTypeExports.ts"
			],
			"output": [
				"src/components/**/*.gen.ts"
			]
		},
		"build:src": {
			"command": "ng build",
			"dependencies": [
				"generate:component-types",
				"../headless:build",
				"../../core-bootstrap:build"
			],
			"files": [
				"src/**",
				"tsconfig.build.json",
				"../tsconfig.json",
				"../../tsconfig.json",
				"angular.json",
				"ng-package.json"
			],
			"output": [
				"dist/**",
				"!dist/README.md",
				"!dist/package.json"
			]
		},
		"build:pkg": {
			"command": "node ../../scripts/buildPackageJson.js . dist",
			"dependencies": [
				"build:src"
			],
			"files": [
				"../../scripts/buildPackageJson.js",
				"../../package.json",
				"package.json",
				"README.md"
			],
			"output": [
				"dist/README.md",
				"dist/package.json"
			]
		},
		"build": {
			"dependencies": [
				"build:pkg"
			]
		},
		"check": {
			"command": "node scripts/verify-module.js"
		},
		"generate:typedoc": {
			"command": "typedoc",
			"dependencies": [
				"generate:component-types"
			],
			"files": [
				"src/**",
				"!src/generated/**",
				"tsconfig.json",
				"../tsconfig.json",
				"../../tsconfig.json",
				"typedoc.json",
				"../../typedoc.base.json"
			],
			"output": [
				"generated/md/**",
				"generated/angular-bootstrap.json"
			]
		}
	},
	"peerDependencies": {
		"@amadeus-it-group/tansu": "^1.0.0",
		"@angular/common": "^18.2.5",
		"@angular/core": "^18.2.5"
	},
	"dependencies": {
		"@agnos-ui/angular-headless": "0.0.0",
		"@agnos-ui/core-bootstrap": "0.0.0",
		"tslib": "^2.7.0"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^18.2.5",
		"@angular/animations": "^18.2.5",
		"@angular/cli": "^18.2.5",
		"@angular/common": "^18.2.5",
		"@angular/compiler": "^18.2.5",
		"@angular/core": "^18.2.5",
		"@angular/forms": "^18.2.5",
		"@angular/platform-browser": "^18.2.5",
		"@angular/platform-browser-dynamic": "^18.2.5",
		"ng-packagr": "^18.2.1",
		"rxjs": "^7.8.1",
		"zone.js": "~0.14.10"
	},
	"sideEffects": false
}
