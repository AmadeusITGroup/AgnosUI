{
	"name": "@agnos-ui/angular",
	"private": true,
	"scripts": {
		"ng": "ng",
		"dev": "ng serve",
		"dev:coverage": "node -r @agnos-ui/code-coverage/interceptReadFile ../node_modules/@angular/cli/bin/ng.js serve",
		"build": "npm run build:headless && npm run build:lib && npm run build:demo",
		"build:headless": "node ../scripts/rm.js dist/headless && ng build headless && node ../scripts/buildPackageJson.js dist/headless dist/headless headless",
		"build:lib": "node ../scripts/rm.js dist/lib && ng build lib && node ../scripts/buildPackageJson.js dist/lib dist/lib lib",
		"build:demo": "ng build demo",
		"build:coverage": "node -r @agnos-ui/code-coverage/interceptReadFile ../node_modules/@angular/cli/bin/ng.js build --configuration=coverage demo",
		"watch": "ng build --watch --configuration development",
		"preview": "node ./scripts/preview.cjs dist/demo --port 4200 --single",
		"test": "vitest run",
		"tdd": "vitest",
		"tdd:ui": "vitest --ui",
		"test:coverage": "node -r @agnos-ui/code-coverage/interceptReadFile ../node_modules/vitest/vitest.mjs run --coverage"
	},
	"dependencies": {
		"@angular/animations": "^17.0.4",
		"@angular/common": "^17.0.4",
		"@angular/compiler": "^17.0.4",
		"@angular/core": "^17.0.4",
		"@angular/forms": "^17.0.4",
		"@angular/platform-browser": "^17.0.4",
		"@angular/platform-browser-dynamic": "^17.0.4",
		"@angular/router": "^17.0.4",
		"rxjs": "^7.8.1",
		"tslib": "^2.6.2",
		"zone.js": "~0.14.2"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^17.0.3",
		"@angular-eslint/eslint-plugin": "^17.1.0",
		"@angular-eslint/eslint-plugin-template": "^17.1.0",
		"@angular-eslint/template-parser": "^17.1.0",
		"@angular/cli": "^17.0.3",
		"@angular/compiler-cli": "^17.0.4",
		"@types/webpack-env": "^1.18.4",
		"ng-packagr": "^17.0.2",
		"ngx-build-plus": "^17.0.0",
		"raw-loader": "^4.0.2",
		"sirv-cli": "^2.0.2",
		"typescript": "~5.2.2"
	}
}
