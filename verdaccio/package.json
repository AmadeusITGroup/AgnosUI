{
	"name": "@agnos-ui/verdaccio",
	"version": "0.4.0",
	"private": true,
	"type": "module",
	"scripts": {
		"verdaccio-publish": "wireit",
		"verdaccio-server": "wireit"
	},
	"dependencies": {
		"verdaccio": "^5.31.1"
	},
	"wireit": {
		"verdaccio-publish": {
			"command": "node publish.js",
			"dependencies": [
				"../angular/bootstrap:build",
				"../react/bootstrap:build",
				"../svelte/bootstrap:build",
				"../base-po:build",
				"../page-objects:build"
			],
			"files": [
				"publish.js",
				"../scripts/npmPublish.js"
			],
			"output": [
				"storage/**"
			]
		},
		"verdaccio-server": {
			"command": "verdaccio -c config.yaml",
			"dependencies": [
				"verdaccio-publish"
			],
			"service": true
		}
	}
}
