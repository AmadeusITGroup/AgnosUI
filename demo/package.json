{
	"name": "@agnos-ui/demo",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "wireit",
		"build": "wireit",
		"generate:doc": "wireit",
		"build:coverage": "wireit",
		"preview": "vite preview",
		"check": "wireit"
	},
	"wireit": {
		"generate:doc": {
			"command": "ts-node --project ../scripts/doc/tsconfig.json ../scripts/doc/generate-docs.ts",
			"files": [
				"../core/src/**",
				"../scripts/doc/tsconfig.json",
				"../scripts/doc/generate-docs.ts"
			],
			"output": [
				"generated/**"
			]
		},
		"dev": {
			"command": "vite dev",
			"dependencies": [
				"generate:doc",
				"../angular/demo:dev",
				"../react/demo:dev",
				"../svelte/demo:dev"
			],
			"service": true
		},
		"build": {
			"command": "vite build",
			"dependencies": [
				"generate:doc",
				"../angular/demo:build",
				"../react/demo:build",
				"../svelte/demo:build"
			],
			"files": [
				"src/**",
				"static/**",
				"svelte.config.js",
				"vite.config.ts",
				"vite-env.d.ts"
			],
			"output": [
				"dist/**",
				".svelte-kit/**"
			]
		},
		"build:coverage": {
			"command": "vite build",
			"dependencies": [
				"generate:doc",
				"../angular/demo:build:coverage",
				"../react/demo:build:coverage",
				"../svelte/demo:build:coverage"
			]
		},
		"check": {
			"command": "svelte-check",
			"dependencies": [
				"build"
			],
			"files": [
				"src/**",
				"tsconfig.json"
			],
			"output": []
		}
	},
	"dependencies": {
		"@floating-ui/dom": "^1.5.4",
		"highlight.js": "^11.9.0"
	},
	"devDependencies": {
		"@stackblitz/sdk": "^1.9.0",
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.4.1",
		"@sveltejs/vite-plugin-svelte": "^3.0.1",
		"@types/dom-view-transitions": "^1.0.4",
		"bootstrap-icons": "^1.11.3",
		"eslint-plugin-svelte": "^2.35.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.9",
		"svelte-check": "^3.6.3",
		"svelte-markdown": "^0.4.1",
		"ts-node": "^10.9.2"
	}
}
