{
	"name": "@agnos-ui/agnos-ui",
	"description": "Framework-agnostic widget library.",
	"homepage": "https://amadeusitgroup.github.io/AgnosUI/latest/",
	"bugs": "https://github.com/AmadeusITGroup/AgnosUI/issues",
	"license": "MIT",
	"private": true,
	"devDependencies": {
		"@axe-core/playwright": "^4.7.3",
		"@microsoft/api-extractor": "^7.36.4",
		"@playwright/test": "^1.37.1",
		"@types/node": "^18.17.11",
		"@types/uuid": "^9.0.2",
		"@typescript-eslint/eslint-plugin": "^6.4.1",
		"@typescript-eslint/parser": "^6.4.1",
		"@vitest/ui": "^0.34.2",
		"bootstrap": "^5.3.1",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "^9.0.0",
		"glob": "^10.3.3",
		"happy-dom": "^10.11.0",
		"husky": "^8.0.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.8",
		"pretty-quick": "^3.1.3",
		"semver": "^7.5.4",
		"syncpack": "^11.2.1",
		"ts-node": "^10.9.1",
		"typescript": "~5.1.6",
		"vite": "^4.4.9",
		"vitest": "^0.34.2"
	},
	"scripts": {
		"build:ci": "npm run doc && npm run build",
		"build:coverage": "npm run doc && node scripts/run.js build:coverage serial",
		"build": "node scripts/run.js build serial",
		"build:rollup": "node scripts/run.js build:rollup serial",
		"build:demo": "node scripts/run.js build:demo serial",
		"build:dts": "node scripts/run.js build:dts serial",
		"build:api-extractor": "node scripts/run.js build:api-extractor serial",
		"tdd": "node scripts/run.js tdd",
		"tdd:ui": "node scripts/run.js tdd:ui",
		"test:coverage": "node scripts/run.js test:coverage",
		"test": "node scripts/run.js test serial",
		"format:fix": "prettier . \"**/*.svelte\" --write",
		"format:check": "prettier . \"**/*.svelte\" --check",
		"lint": "eslint --ext ts,tsx,svelte .",
		"dev": "node scripts/run.js dev",
		"dev:coverage": "node scripts/run.js dev:coverage",
		"preview": "node scripts/run.js preview",
		"e2e": "node scripts/e2e.js",
		"e2e:ui": "playwright test --ui",
		"doc": "ts-node --project scripts/doc/tsconfig.json scripts/doc/generate-docs.ts",
		"postinstall": "husky install",
		"syncpack:check": "syncpack lint",
		"syncpack:fix": "syncpack fix-mismatches"
	},
	"workspaces": [
		"code-coverage",
		"core",
		"angular",
		"react",
		"svelte",
		"demo",
		"eslint-plugin",
		"base-po",
		"page-objects"
	]
}
