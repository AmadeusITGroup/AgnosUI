{
	"name": "@agnos-ui/core-bootstrap",
	"description": "Styles and component interface extensions necessary to use AgnosUI with Bootstrap.",
	"version": "0.0.0",
	"private": true,
	"keywords": [
		"css",
		"scss"
	],
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"sass": "./src/scss/agnosui.scss",
			"require": "./dist/index.cjs",
			"default": "./dist/index.js"
		},
		"./types": {
			"types": "./dist/types.d.ts",
			"require": "./dist/types.cjs",
			"default": "./dist/types.js"
		},
		"./components/*": {
			"types": "./dist/components/*/index.d.ts",
			"require": "./dist/components/*/index.cjs",
			"default": "./dist/components/*/index.js"
		},
		"./services/transitions": {
			"types": "./dist/services/transitions/index.d.ts",
			"require": "./dist/services/transitions/index.cjs",
			"default": "./dist/services/transitions/index.js"
		},
		"./config": {
			"types": "./dist/config.d.ts",
			"require": "./dist/config.cjs",
			"default": "./dist/config.js"
		},
		"./scss/*": {
			"require": "./src/scss/*",
			"default": "./src/scss/*"
		},
		"./css/*": {
			"require": "./dist/css/*",
			"default": "./dist/css/*"
		}
	},
	"scripts": {
		"build": "wireit",
		"check": "wireit",
		"test": "vitest run",
		"tdd": "vitest",
		"tdd:ui": "vitest --ui",
		"tdd:debug": "vitest --no-browser.headless",
		"test:coverage": "wireit"
	},
	"wireit": {
		"build": {
			"command": "vite build && tsc -p tsconfig.build.json && node ../scripts/buildPackageJson.js . dist && node scripts/copyScss.js && sass dist/scss:dist/css",
			"files": [
				"src/**",
				"tsconfig.build.json",
				"../tsconfig.json",
				"vite.config.ts",
				"README.md"
			],
			"output": [
				"dist/**"
			],
			"dependencies": [
				"../core:build"
			]
		},
		"check": {
			"command": "tsc",
			"files": [
				"src/**",
				"tsconfig.json",
				"vite.config.ts",
				"vitest.config.ts"
			],
			"output": []
		},
		"test:coverage": {
			"command": "node --import @agnos-ui/code-coverage/interceptReadFile ../node_modules/vitest/vitest.mjs run --coverage",
			"dependencies": [
				"../code-coverage:build"
			],
			"files": [
				"src/**",
				"tsconfig.json",
				"vitest.config.ts"
			],
			"output": [
				"coverage/**"
			]
		},
		"generate:typedoc": {
			"command": "typedoc",
			"files": [
				"src/**",
				"tsconfig.json",
				"../tsconfig.json",
				"typedoc.json",
				"../typedoc.base.json"
			],
			"output": [
				"generated/md/**",
				"generated/typescript-bootstrap.json"
			]
		}
	},
	"devDependencies": {
		"sass": "^1.79.3"
	},
	"dependencies": {
		"@agnos-ui/core": "0.0.0"
	},
	"sideEffects": false
}
